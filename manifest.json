{
  "manifest_version": 3,
  "name": "HubSpot Layout Manager",
  "version": "1.0",
  "description": "HubL autocompletion for HubSpot design manager",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://app.hubspot.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.hubspot.com/design-manager/*"
      ],
      "css": ["styles.css"],
      "js": [
        "pages/design-manager.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["pages/*"],
    "matches": ["https://app.hubspot.com/*"]
  }]
}