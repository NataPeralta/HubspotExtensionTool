{
  "manifest_version": 3,
  "name": "HubSpot Layout Manager",
  "version": "1.0",
  "description": "Toggle panel width in HubSpot design manager",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.hubspot.com/*"
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["https://app.hubspot.com/design-manager/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
